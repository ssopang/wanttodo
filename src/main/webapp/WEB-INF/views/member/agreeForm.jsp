	function toggleAllCheckboxes() {
	    var allChecked = document.getElementById('allAgree').checked;
	    var individualCheckboxes = document.querySelectorAll('.individualAgree');
	    individualCheckboxes.forEach(function(checkbox) {
	        checkbox.checked = allChecked;
	    });
	    toggleAllAgree(); // 개별 체크박스 상태 확인 후 "모두 동의" 상태 조정
