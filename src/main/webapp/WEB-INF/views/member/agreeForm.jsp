	// 개별 체크박스가 체크될 때마다 "모두 동의" 체크박스 상태 확인
	function toggleAllAgree() {
	    var individualCheckboxes = document.querySelectorAll('.individualAgree');
	    var allChecked = true;
	    
	    individualCheckboxes.forEach(function(checkbox) {
	        if (!checkbox.checked) {
	            allChecked = false;
	        }
	    });

	    // 개별 체크박스가 모두 체크된 경우 "모두 동의" 체크박스를 활성화
	    document.getElementById('allAgree').checked = allChecked;
	    document.getElementById('allAgree').disabled = false;

	    // 하나라도 해제되면 "모두 동의" 체크박스를 비활성화
	    if (!allChecked) {
	        document.getElementById('allAgree').disabled = false;
	    }
	}

	// 필수 동의 체크박스가 체크되지 않으면 경고창 띄우고 이동하지 않도록 함
	function checkRequiredAgreement() {
